#!/bin/bash

export CLASSPATH=`ls -1 jars/*.jar jars/worldwind/*.jar | xargs | sed "s/ /:/g"`:.
OSNAME=`uname`

if [ 'Linux' == "$OSNAME" ]; then
    DOCK=
else
    DOCK="-Xdock:name='Horizon Server' -Xdock:icon=img/logo.png"
fi

clean() {
    echo "Clean old classfiles" 1>&2
    rm org/haldean/chopper/server/*.class
    echo "Clean backup java files" 1>&2
    rm org/haldean/chopper/server/*.java\~
}

if [ 'clean' == "$1" ]; then
    clean
    exit
fi

clean

if [ 'pack' == "$1" ]; then
    echo "Creating archive" 1>&2
    tar -czf server.tar.gz org unit
else
    javac org/haldean/chopper/server/ServerHost.java && \
	echo "Compiled" 1>&2 && \
	java -Djava.library.path=jars/worldwind/ $DOCK \
	org.haldean.chopper.server.ServerHost "pices.dynalias.org:23" debug
fi